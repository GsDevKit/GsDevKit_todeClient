#! /bin/bash
#=========================================================================
# Copyright (c) 2015 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] [-D] [-f] [-p <postfix] [-t] [-v Pharo3.0 | Pharo4.0 | Pharo5.0] 
                      [ [-s <session-description-name>] [-z <smalltalkCI-smalltalk.ston-path>]]
                      <client-name>

Create a client image of the given name. Used for running pharo-based 
scripts and for running the tODE client UI.

If a client with the given <client-name> already exists, the installation 
is skipped unless the -f option is specified.

OPTIONS
  -h 
     display help
  -f
     Force client installation, whether or not the image already exists.
  -p <postfix>
     Append <postfix> to end of image name. Useful for creating
     multiple client images.
  -s <session-description-name>
     If -z option is specified, <session-description-name> is used to override the default session name
     specified in the <smalltalkCI-smalltalk.ston-path> file.
  -z <smalltalkCI-smalltalk.ston-path>
     Path to SmalltalkCI smalltalk.ston file which contains the load and optional
     tests instructions for creating the image
  -t
     Build a tODE client image
  -v Pharo3.0 | Pharo4.0 | Pharo5.0
     Choose the version of Smalltalk to use for the client. Default is Pharo3.0.
  -D
     Create client using headful invocation for debugging creation errors.

EXAMPLES
  $(basename $0) -h
  $(basename $0) -t -p _0 todeDev
  $(basename $0) -f -t todeDev
  $(basename $0) -t -v Pharo3.0 todeDev
  $(basename $0) -t todeDev
  $(basename $0) -v Pharo5.0 -z \$GS_HOME/sys/local/pharo/pharoClient.ston pharoClient
  $(basename $0) -v Pharo5.0 -s gs_329 -z \$GS_HOME/sys/local/pharo/pharoClient.ston pharoClient
  $(basename $0) -f -v Pharo5.0 -z \$GS_HOME/sys/local/pharo/pharoClient.ston pharoClient
  $(basename $0) -v Pharo5.0 pharoClient
  $(basename $0) pharoClient
  $(basename $0) -p _0 pharoClient

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env
if [ "${GS_TODE_CLIENT}x" = "x" ] ; then
  echo "the GsDevKit_todeClient project has not been installed correctly or the"
  echo "GS_TODE_CLIENT environment variable has not been defined"
  exit 1
fi

postFixArg=""
forceArg=""
version="Pharo3.0"
todeArg=""
smalltalkCIArg=""
debugArg=""
sessionNameArg=""
while getopts ":fhp:z:tv:Ds:" OPT ; do
  case "$OPT" in
    h) usage; exit 0;;
    f) forceArg=" -f ";;
    p) postFixArg=" -p ${OPTARG} ";;
    t) todeArg=" -t ";;
    z) smalltalkCIArg=" -z  ${OPTARG} ";;
    v) version="${OPTARG}";;
    s) sessionNameArg=" -s ${OPTARG} ";;
    D) debugArg=" -D ";;
    ?) postFixArg=" -p ";;          # handle optional -p argument "
    *) usage; exit 1;;
  esac
done
shift $(($OPTIND - 1))
if [ $# -lt 1 ]; then
  usage; exit 1
fi
clientName=$1

case $version in
  Pharo*) 
    $GS_TODE_CLIENT/bin/createPharoTodeClient $todeArg $smalltalkCIArg $debugArg $sessionNameArg $forceArg $postFixArg -v $version $clientName
    ;;
  *) usage; exit 1;;
esac

echo "...finished $(basename $0)"
