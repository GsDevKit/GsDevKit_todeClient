#! /bin/bash
#=========================================================================
# Copyright (c) 2015 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] [-f] [-t] [-p <postfix] [-v Pharo3.0 | Pharo4.0 | Pharo5.0 ]
                      [-z <smalltalkCI-smalltalk.ston-path>]
                      <client-name>

Create a client of the given name. Used for running pharo-based scripts
and for running the tODE client UI.

If the client image already exists, the installation is skipped
unless the -f option is specified.

OPTIONS
  -h 
     display help
  -f
     Force client installation, whether or not the image
     already exists.
  -p <postfix>
     Append <postfix> to end of image name. Useful for creating
     multiple client images.
  -z <smalltalkCI-smalltalk.ston-path>
     Path to SmalltalkCI smalltalk.ston file which contains the load and optional
     tests instructions for creating the image
  -t
     Build a tODE client image
  -v Pharo3.0 | Pharo4.0
     Choose the version of Pharo to use for the client. Default is Pharo3.0.

EXAMPLES
  $(basename $0) -h
  $(basename $0) -p _0 todeDev
  $(basename $0) -f todeDev
  $(basename $0) -v Pharo3.0 todeDev
  $(basename $0)
  $(basename $0) -v Pharo5.0 -z \$GS_HOME/sys/local/pharo/pharoClient.ston pharoClient
  $(basename $0) -f -v Pharo5.0 -z \$GS_HOME/sys/local/pharo/pharoClient.ston pharoClient
  $(basename $0) -v Pharo5.0 pharoClient
  $(basename $0) pharoClient
  $(basename $0) -p _0 pharoClient


HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env
if [ "${GS_TODE_CLIENT}x" = "x" ] ; then
  echo "the GsDevKit_todeClient project has not been installed correctly or the"
  echo "GS_TODE_CLIENT environment variable has not been defined"
  exit 1
fi
source ${GS_HOME}/bin/private/winRunPharoFunctions

postFix=""
force=""
version="Pharo3.0"
todeImage="false"
smalltalkCIPath=""
while getopts ":fhp:z:tv:" OPT ; do
  case "$OPT" in
    h) usage; exit 0;;
    f) force="true";;
    p) postFix="${OPTARG}";;
    t) todeImage="true";;
    s) smalltalkCIPath="${OPTARG}";;
    v) version="${OPTARG}";;
    ?) postFixArg=" -p ";;          # handle optional -p argument "
    *) usage; exit 1;;
  esac
done
shift $(($OPTIND - 1))

if [ $# -lt 1 ]; then
  usage; exit 1
fi
clientName=$1
directoryPath=$GS_CLIENT_DEV_CLIENTS/$clientName

if [ ! -d "$directoryPath" ] ; then
  mkdir $directoryPath
  cp -r $GS_TODE_CLIENT/template/* $directoryPath/
fi

if [ ! -e "$directoryPath/Pharo.image" ] ; then
  $GS_HOME/bin/private/downloadSmalltalkClient -v $version -d $directoryPath
fi

targetImageBasename=todeClient${postFix}

message="create"
if [ -e $directoryPath/${targetImageBasename}.image ] ; then
  if [ "${force}x" = "x" ] ; then
    echo "client image already created, use -f to force update"
    exit 0
  else
    message="update"
  fi
else
  # target image does not exist, so force is a noop
  force="false"
fi

# Detect operating system
PLATFORM="`uname -sm | tr ' ' '-'`"

case "$PLATFORM" in
  MSYS_NT*|MINGW32_NT*)
    pharoCmd="win_run_pharo $directoryPath --headless"
    todeLoadPath=$GS_SYS_DEFAULT/pharo/windows/todeLoad.st
    if [ -e $GS_SYS_LOCAL/pharo/windows/todeLoad.st ] ; then
      todeLoadPath=$GS_SYS_LOCAL/pharo/windows/todeLoad.st
    fi
    ;;
  *)
    pharoCmd="$directoryPath/pharo"
    todeLoadPath=$GS_SYS_DEFAULT/pharo/todeLoad.st
    if [ -e $GS_SYS_LOCAL/pharo/todeLoad.st ] ; then
      todeLoadPath=$GS_SYS_LOCAL/pharo/todeLoad.st
    fi
    ;;
esac

if [ "${todeImage}" = "true" ] ; then
  echo "${message} todeClient${postFix} image using $todeLoadPath"

  if [ "${force}" = "true" ] ; then
    $pharoCmd $directoryPath/${targetImageBasename}.image save todeClientTmp
  else
    $pharoCmd $directoryPath/Pharo.image save todeClientTmp
  fi

  $pharoCmd $directoryPath/todeClientTmp.image st --quit --save $todeLoadPath

  $pharoCmd $directoryPath/todeClientTmp.image save $targetImageBasename

  echo""
  rm -f $directoryPath/todeClientTmp.*  $directoryPath/*.zip

  $GS_HOME/bin/private/scanProductsForInstallingGciLibs $directoryPath
else

  if [ "${force}" = "true" ] ; then
    $pharoCmd $directoryPath/${targetImageBasename}.image save clientTmp
  else
    $pharoCmd $directoryPath/Pharo.image save clientTmp
  fi

  if [ "${smalltalkCIPath}x" != "x" ] ; then
    echo "${message} client${postFix} image using $smalltalkCIPath"
    $pharoCmd $directoryPath/clientTmp.image eval --save "
      [ Metacello new
          baseline: 'SmalltalkCI';
          repository: '${GS_SHARED_REPO_SMALLTALKCI}';
          onConflict: [:ex | ex pass];
          load ] on: Warning do: [:w | w resume ].
      (Smalltalk at: #SmalltalkCI) loadCIFor: '${smalltalkCIPath}'
    "
  else
    echo "${message} client${postFix} image"
  fi
  $pharoCmd $directoryPath/clientTmp.image save $targetImageBasename

  echo""
  rm -f $directoryPath/clientTmp.*  $directoryPath/*.zip

  $GS_HOME/bin/private/scanProductsForInstallingGciLibs $directoryPath
fi
echo "...finished $(basename $0)"
